{
    "desk_interaction_start": {
        "dialogue": [
            { "text": "You approach the old wooden desk. It's covered in dust and forgotten papers." },
            { "text": "I wonder what's inside..." }
        ],
        "options": [
            { "text": "Search the drawers", "nextEventKey": "DIALOGUE_BRANCH:desk_search_drawers" },
            { "text": "Inspect the papers", "nextEventKey": "DIALOGUE_BRANCH:desk_inspect_papers" },
            { "text": "Leave it alone", "nextEventKey": "DIALOGUE_END" }
        ]
    },
    "desk_search_drawers": {
        "dialogue": [
            { "text": "You pull open a drawer. It's empty except for a single, tarnished coin." },
            { "text": "Just a coin? Oh well." }
        ],
        "options": [{ "text": "Close the drawer", "nextEventKey": "DIALOGUE_END" }]
    },
    "desk_inspect_papers": {
        "dialogue": [
            { "text": "The papers are old invoices and forgotten to-do lists. Nothing interesting here." },
            { "text": "So much for a hidden treasure map." }
        ],
        "options": [{ "text": "Put papers back", "nextEventKey": "DIALOGUE_END" }]
    },
    "bookcase_interaction_start": {
        "dialogue": [
            { "text": "A tall bookcase filled with ancient, musty tomes." },
            { "text": "So many books... but what to read?" }
        ],
        "options": [
            { "text": "Pull out a random book", "nextEventKey": "DIALOGUE_BRANCH:bookcase_read_random" },
            { "text": "Look for a specific title", "nextEventKey": "DIALOGUE_BRANCH:bookcase_search_title" },
            { "text": "Walk away", "nextEventKey": "DIALOGUE_END" }
        ]
    },
    "bookcase_read_random": {
        "dialogue": [
            { "text": "You randomly grab a book. It's about advanced quantum mechanics. Your eyes glaze over." },
            { "text": "Nope, too smart for me. I prefer fantasy." }
        ],
        "options": [{ "text": "Put the book back", "nextEventKey": "DIALOGUE_END" }]
    },
    "bookcase_search_title": {
        "dialogue": [
            { "text": "Let's see if they have 'The Art of Not Working'." },
            { "text": "You don't find that one, but you do spot a dusty old comic book tucked away." }
        ],
        "options": [
            { "text": "Read the comic book", "nextEventKey": "DIALOGUE_BRANCH:bookcase_read_comic" },
            { "text": "Keep searching", "nextEventKey": "DIALOGUE_END" }
        ]
    },
    "bookcase_read_comic": {
        "dialogue": [
            { "text": "It's an issue of 'Captain Code'. You spend a happy hour reading about his adventures." },
            { "text": "Best break ever." }
        ],
        "options": [{ "text": "Put the comic back", "nextEventKey": "DIALOGUE_END" }]
    },
    "simple_sign_dialogue": {
        "dialogue": [{ "text": "Welcome to the Office! Please enjoy your stay." }]
    }
